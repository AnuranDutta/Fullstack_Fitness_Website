<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <meta http-equiv="X-UA-Compatible" content="ie=edge">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.11.2/css/all.min.css">
    <link rel="stylesheet" href="/static/stylesShop.css" />
    <script src="/static/scriptShop.js" async></script>
</head>
<style>
    html,
    body {
        margin: 0;
        padding: 0;
        height: 100%;
    }

    #container {
        min-height: 100%;
        position: relative;
    }

    .card {
        width: 18rem;
        position: relative;
        left: 50%;
        right: 50%;
        transform: translate(-50%, 0%);
    }

    #body {
        padding: 10px;
        padding-bottom: 60px;
        /* Height of the footer */
    }

    #footer {
        position: absolute;
        bottom: 0;
        width: 100%;
        height: 60px;
    }

    button {
        padding: 0;
        border: none;
        background: none;
    }
</style>

<body>
    <div id="container">
        <div id="header">

            <!-- Header start -->
            <nav class="navbar navbar-expand-sm navbar-dark" style="background-color: #254175;">
                <img src="https://encrypted-tbn0.gstatic.com/images?q=tbn%3AANd9GcRR4hm66ZVaEK_uLX27bGsSu1aPphvt_SsljaljmcDpjJ1CZKbE"
                    class="img-fluid ${3|rounded-top,rounded-right,rounded-bottom,rounded-left,rounded-circle,|}" alt=""
                    width="60px">
                <a class="navbar-brand" href="#" style="color: rgb(247, 191, 51);">&nbsp;BravoFitness</a>
                <button class="navbar-toggler d-lg-none" type="button" data-toggle="collapse"
                    data-target="#collapsibleNavId" aria-controls="collapsibleNavId" aria-expanded="false"
                    aria-label="Toggle navigation"></button>
                <div class="collapse navbar-collapse" id="collapsibleNavId">
                    <ul class="navbar-nav mr-auto mt-2 mt-lg-0">
                        <li class="nav-item active">
                            <a class="nav-link" href="/">Home <span class="sr-only">(current)</span></a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link  text-primary" href="#">Shop</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/blogs">Blogs</a>
                        </li>
                        <li class="nav-item">
                            <a class="nav-link" href="/chat">Chat</a>
                        </li>
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">Tools</a>
                            <div class="dropdown-menu" aria-labelledby="dropdownId">
                                <a class="dropdown-item" href="/bmi">BMI calculator</a>
                                <a class="dropdown-item" href="/diet">Diet planner</a>
                            </div>
                        </li>
                    </ul>
                    <ul class="navbar-nav">
                        <li class="nav-item dropdown">
                            <a class="nav-link dropdown-toggle" href="#" id="dropdownId" data-toggle="dropdown"
                                aria-haspopup="true" aria-expanded="false">
                                <i class="fa fa-user"></i>
                                Hi <%= name %>
                            </a>
                            <div class="dropdown-menu" aria-labelledby="dropdownId">
                                <a class="dropdown-item" href="/account">Account Details</a>
                                <a class="dropdown-item" href="user.html">
                                    <form action="/logout?_method=DELETE" method="POST">
                                        <button type="submit">Log Out</button>
                                    </form>
                                </a>
                            </div>
                        </li>
                    </ul>
                    <form class="form-inline my-2 my-lg-0">
                        <input class="form-control mr-sm-2" type="text" placeholder="Search">
                        <button class="btn btn-outline-warning my-2 my-sm-0" type="submit">Search</button>
                    </form>

                </div>
            </nav>
            <!-- Header end -->
        </div>
        <div id="body">
            <!-- body start-->
            <section class="container content-section">
                <h2 class="section-header">Protein Suplements</h2>
                <div class="shop-items">
                    <div class="shop-item">
                        <span class="shop-item-title">UN Whey Gold</span>
                        <img class="shop-item-image"
                            src="https://cdn.healthxp.in/wp-content/uploads/2017/03/un-whey-gold-5-lb-370x370.jpg">
                        <div class="shop-item-details">
                            <span class="shop-item-price">₹3299.00</span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                    <div class="shop-item">
                        <span class="shop-item-title">Dymatize Elite 100%</span>
                        <img class="shop-item-image"
                            src="https://cdn.healthxp.in/wp-content/uploads/2016/07/Dymatize-elite-whey-protein-5lb2-300x300.png">
                        <div class="shop-item-details">
                            <span class="shop-item-price">₹5199.00</span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                    <div class="shop-item">
                        <span class="shop-item-title">MP Combat 100%</span>
                        <img class="shop-item-image"
                            src="https://cdn.healthxp.in/wp-content/uploads/2017/02/musclepharm-Combat-Whey_5lb_Strawberry-300x300.jpg">
                        <div class="shop-item-details">
                            <span class="shop-item-price">₹4399.00</span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                    <div class="shop-item">
                        <span class="shop-item-title">Nitrotech Gold 100%</span>
                        <img class="shop-item-image"
                            src="https://cdn.healthxp.in/wp-content/uploads/2017/04/Muscletech-Nitrotech-Whey-Gold-5.5-lbs-1-300x300.jpg">
                        <div class="shop-item-details">
                            <span class="shop-item-price">₹5399.00</span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                </div>
            </section>
            <section class="container content-section">
                <h2 class="section-header">Vitamins</h2>
                <div class="shop-items">
                    <div class="shop-item">
                        <span class="shop-item-title">Multi Vitamin, 90N</span>
                        <img class="shop-item-image"
                            src="https://cdn.healthxp.in/wp-content/uploads/2017/07/MuscleTech-Multi-Vitamin-Unflavoured-90-tablet-300x300.jpg">
                        <div class="shop-item-details">
                            <span class="shop-item-price">₹1299.00</span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                    <div class="shop-item">
                        <span class="shop-item-title">Joint Support 60N</span>
                        <img class="shop-item-image"
                            src="https://cdn.healthxp.in/wp-content/uploads/2019/08/Hxp-Joint-supports-60-tab-300x300.jpg">
                        <div class="shop-item-details">
                            <span class="shop-item-price">₹449.00</span>
                            <button class="btn btn-primary shop-item-button" type="button">ADD TO CART</button>
                        </div>
                    </div>
                </div>
            </section>
            <!-- cart -->
            <section class="container content-section">
                <h2 class="section-header">CART</h2>
                <div class="cart-row">
                    <span class="cart-item cart-header cart-column">ITEM</span>
                    <span class="cart-price cart-header cart-column">PRICE</span>
                    <span class="cart-quantity cart-header cart-column">QUANTITY</span>
                </div>
                <div class="cart-items">
                </div>
                <div class="cart-total">
                    <strong class="cart-total-title">Total</strong>
                    <span class="cart-total-price">₹0</span>
                </div>
                <button class="btn btn-primary btn-purchase" type="button">PURCHASE</button>
            </section>
            <!-- body end -->
        </div>
        <div id="footer">
            <!-- footer start-->
            <footer class="page-footer font-small bg-warning">

                <!-- Copyright -->
                <div class="footer-copyright text-center py-3">#BravoFitness <a
                        href="https://github.com/AnuranDutta/miniProject" target="__blank"><i class="fab fa-github"></i>
                        GitHub</a></div>
                <!-- Copyright -->

            </footer>
            <!-- footer end -->
        </div>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/jquery/3.4.1/jquery.slim.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.16.0/umd/popper.min.js"></script>
        <script src="https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/js/bootstrap.min.js"></script>
    </div>
</body>

</html>